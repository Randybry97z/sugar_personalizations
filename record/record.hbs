<div>
    {{#if enableHeaderPane}}
        {{partial 'headerpane' ../this view=../this}}
    {{/if}}
    {{#if meta.useTabsAndPanels}}
    {{#with myData}}
	<div class="row-fluid contact-data" style="margin: 2rem; display: flex; justify-content: space-between;width: auto;">
  	<div class="span4" style="font-size: 1rem;">
      <p>Industry</p>
      <p>Client tiers</p>
      <p>Type <strong>Company</strong></p>
      <p>Clients 1200</p>
  	</div>
  <div class="span8">
    <div class="row-fluid">
      <div class="shadow1" style="box-shadow: 3px 3px 5px #aaaaaa;">
        <div class="row-fluid">
          <div class="span2">
            <img src="https://cdn.britannica.com/54/188754-050-A3613741/Elon-Musk-2010.jpg" alt="Elon-Musk-2010" style="width: 100px;">
          </div>
          <div class="span5">
            <a href="#" class="account-link" style="font-size: 20px;">Elon Musk</a>
            <br>
              CEO of SpaceX
          </div>
          <div class="span5">
            <table>
              <tbody>
                <tr>
                  <td>
                    <i class="fa fa-envelope fa-large"></i>
                  </td>
                  <td>
                    <a rel="tooltip" data-placement="bottom" class="ellipsis_inline" href="mailto: asdasdas@asdas.com" data-action="email" data-email-to="elon.musk@spacex.com" data-original.title="elon.musk@spacex.com (Primary)" style="font-size: 12px">elon.musk@spacex.com</a>
                  </td>
                </tr>
                <tr>
                  <td>
                    <i class="fa fa-phone fa-large"></i>
                  </td>
                  <td>
                    <a href="tel: 123456789">12345678910</a>
                  </td>
                </tr>
                <tr>
                  <td>
                    <i class="fa fa-map-marker fa-large"></i>
                  </td>
                  <td>
                    <address style="display: inline;"><strong>USA.</strong><br/> San Francisco</address>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

      <div style="height: 25px;"></div>
      {{!--/*
        *Progress bars
      */--}}
      <div class="row-fluid">
        <div class="span12">
          <div class="row-fluid">
            <div class="span4">
              <b>Eventos</b>
              <div class="container-fixed-height margin-top" style="margin-top: 10px;min-height: 30px;position: relative;">
                <div class="performance_number" style="text-align: center;position: absolute;top: 0px;left: 40%;margin-left: -10px">
                  <span class="number-huge" style="font-size: 28px;">40</span>
                  <br/>
                  <i class="fa fa-sort-desc big" style="margin-top: -15px; font-size: 2em;"></i>
                </div>
              </div>
              <div class="progress">
                <div class="bar" role="progressbar" style="width: 20%;border-radius: 0px;"></div>
                <div class="bar completed-bar" role="progressbar" style="width: 30%;background-color: #0100ff;border-radius: 0px;"></div>
              </div>
              <div class="container-fixed-height margin-bottom" style="margin-bottom: 10px;min-height: 30px;position: relative;">
                <div class="performance_number" style="left:20%;margin-left: -12px;text-align: center;position: absolute;top: 0px;">
                  <i class="fa fa-sort-asc"></i>
                  <br>
                  <span class="number-big" style="font-size: 20px;">20</span>
                </div>
              </div>
            </div>
            <div class="span4">
              <b>Reuniones</b>
              <div class="container-fixed-height margin-top" style="margin-top: 10px;min-height: 30px;position: relative;">
                <div class="performance_number" style="text-align: center;position: absolute;top: 0px;left: calc({{plannedMeetings.length}}*2*10%);margin-left: -10px">
                  <span class="number-huge" style="font-size: 28px;">
                  	{{#if plannedMeetings}}
                  		{{plannedMeetings.length}}
                  	{{else}}
                  		0
                  	{{/if}}
                  </span>
                  <br/>
                </div>
              </div>
              <div class="progress">
                <div class="bar" role="progressbar" style="width: calc({{plannedMeetings.length}}*10%);border-radius: 0px; background-color: yellow;"></div>
                <div class="bar completed-bar" role="progressbar" style="width: calc({{heldedMeetings.length}}*10%);background-color: #00975C; border-radius: 0px;"></div>
              </div>
              <div class="container-fixed-height margin-bottom" style="margin-bottom: 10px;min-height: 30px;position: relative;">
                <div class="performance_number" style="left:calc({{heldedMeetings.length}}*10%);margin-left: -12px;text-align: center;position: absolute;top: 0px;">
                  <br>
                  <span class="number-big" style="font-size: 20px;">{{#if heldedMeetings}}
                      {{heldedMeetings.length}}
                    {{else}}
                      0
                    {{/if}}</span>
                </div>
              </div>
            </div>
            <div class="span4">
              <b>Llamadas</b>
              <div class="container-fixed-height margin-top" style="margin-top: 10px;min-height: 30px;position: relative;">
                <div class="performance_number" style="text-align: center;position: absolute;top: 0px;left: 30%;margin-left: -10px">
                  <span class="number-huge" style="font-size: 28px;">30</span>
                  <br/>
                  <i class="fa fa-sort-desc big" style="margin-top: -15px; font-size: 2em;"></i>
                </div>
              </div>
              <div class="progress">
                <div class="bar" role="progressbar" style="width: 20%;border-radius: 0px;"></div>
                <div class="bar completed-bar" role="progressbar" style="width: 30%;background-color: #0100ff;border-radius: 0px;"></div>
              </div>
              <div class="container-fixed-height margin-bottom" style="margin-bottom: 10px;min-height: 30px;position: relative;">
                <div class="performance_number" style="left:10%;margin-left: -12px;text-align: center;position: absolute;top: 0px;">
                  <i class="fa fa-sort-asc"></i>
                  <br>
                  <span class="number-big" style="font-size: 20px;">10</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid info-cards" style="margin: 2rem;">
  <div class="span3">
    <div class="square-red" style="background-color: #E61718; color: white; padding: 25px; height: 45px; width: 150px; font-size: 20px; vertical-align: middle;text-align: center;">
      <i class="fa fa-calendar fa-2x" style="color: white;"></i>
 					{{#if lastMeeting}}
 						<span id="dates">{{lastMeeting}}</span>
      			<div class="big10" style="font-size: 11px;">Última reunión</div>
      		{{else}}
      			<span id="dates">Sin reuniones</span>
      		{{/if}}
    </div>
  </div>
  <div class="span3">
    <div class="square-yellow" style="background-color: #FDD300; color: white; padding: 25px; height: 45px; width: 150px; font-size: 20px; vertical-align: middle;text-align: center;">
      <i class="fa fa-dollar fa-2x" style="color: white;"></i> $ 1,000,000
      <div class="big10" style="font-size: 11px;">Revenue Target</div>
    </div>
  </div>
  <div class="span3">
    <div class="square-blue" style="background-color: #176DE5; color: white; padding: 25px; height: 45px; width: 150px; font-size: 20px; vertical-align: middle;text-align: center;">
      <i class="fa fa-money fa-2x" style="color: white;"></i>
      {{#if amount_ytd}}
      <span>{{amount_ytd}}</span>
      <div class="big10" style="font-size: 11px;">Ingresos del año</div>
      {{else}}
        <span>Sin ventas cerradas</span>
      {{/if}}
    </div>
  </div>
  <div class="span3">
    <div class="square-green" style="background-color: #00975C; color: white; padding: 25px; height: 45px; width: 150px; font-size: 20px; vertical-align: middle;text-align: center;">
      <i class="fa fa-dollar fa-2x" style="color: white;"></i>
      <div class="big10" style="font-size: 11px;">Current Pipeline</div>
    </div>
  </div>
</div>
				{{/with}}
        {{partial 'tabspanels' ../this view=../this}}
    {{else}}
        {{partial 'businesscard' ../this view=../this}}
    {{/if}}
</div>
